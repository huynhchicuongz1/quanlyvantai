<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView style="@style/cardView"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@android:color/holo_blue_light"
        style="@style/linearDefault"
        android:orientation="horizontal">

        <ImageView
            style="@style/imageCardView"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:scaleType="center"
            android:layout_marginRight="20dp"
            android:id="@+id/avatar" />

        <LinearLayout style="@style/linearDefault"
            android:orientation="vertical">
            <TextView
                android:id="@+id/info_tenTX"
                android:text="TEST"
                style="@style/textViewCardView" />

            <TextView
                android:id="@+id/info_maTX"
                android:text="TEST"
                style="@style/textViewCardView" />
            <ImageView
                android:id="@+id/info_signature"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/border"/>
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>