<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:padding="5dp">
    <LinearLayout
        android:background="@drawable/set_status_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        style="@style/linearDefault"
        android:orientation="horizontal">
        <ImageView
            style="@style/imageCardView"
            android:src="@drawable/vietnam"
            android:scaleType="center"
            android:id="@+id/avatar" />
        <LinearLayout style="@style/linearDefault"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/edit_soPhieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số phiếu"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/edit_ngayXP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Ngày Xuất" />

            <TextView
                android:id="@+id/edit_tenXe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Tên Xê" />

            <TextView
                android:id="@+id/edit_tenTinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Nơi Xuất phát" />
            <TextView
                android:id="@+id/edit_tenTuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Tuyến" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
